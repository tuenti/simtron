    "@types/node-json-db": "*",
    "@types/serialport": "^7.0.3",
    "@types/supertest": "*",
    "graphql-code-generator": "^0.18.2",
    "graphql-codegen-typescript-template": "^0.18.2",
    "graphql-tools": "^4.0.4",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "*",
    "typescript": "^3.4.5"
  }
