{
    "name": "simtron",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "watch": "rm -rf dist && tsc -p src",
        "compile": "rm -rf dist && tsc -p src/tsconfig-dist.json",
        "start": "npm run compile && pm2 start ./dist/index.js --name simtron-service",
        "stop": "pm2 delete simtron-service && docker-compose -f ./server-provision/docker-compose.yaml stop",
        "dev": "DEVELOPMENT=1 DEBUG=app nodemon --watch dist --exec node dist/index.js --",
        "test": "jest"
    },
    "dependencies": {
        "@slack/rtm-api": "^5.0.1",
        "@slack/web-api": "^5.0.1",
        "debug": "^4.1.1",
        "google-libphonenumber": "^3.2.2",
        "node-json-db": "^0.11.0",
        "nodemailer": "^6.4.2",
        "pdu": "*",
        "serialport": "^7.1.5",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/debug": "^4.1.4",
        "@types/google-libphonenumber": "*",
        "@types/jest": "^24.0.13",
        "@types/node-json-db": "*",
        "@types/nodemailer": "^6.2.2",
        "@types/serialport": "^7.0.3",
        "@types/supertest": "*",
        "jest": "^24.8.0",
        "nodemon": "^1.19.1",
        "ts-jest": "^24.0.2",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-eslint-rules": "*",
        "typescript": "^3.4.5"
    }
}
