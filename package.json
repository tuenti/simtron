{
  "name": "simtron",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "compile": "rm -rf dist && babel --extensions '.ts,.js' src --out-dir dist",
    "start": "npm run compile && pm2 start ./dist/index.js --name simtron",
    "dev": "DEVELOPMENT=1 DEBUG=app nodemon --watch src --exec babel-node --extensions '.ts,.js' src/index.ts --",
    "generate-types": "gql-gen --require ts-node/register --schema ./src/graphql/types-generator-schema.ts --template graphql-codegen-typescript-template --out ./src/graphql/types.ts",
    "test": "jest"
  },
  "dependencies": {
    "@slack/client": "^4.6.0",
    "apollo-server-express": "^2.0.6",
    "debug": "~2.6.9",
    "express": "^4.16.4",
    "google-libphonenumber": "^3.1.15",
    "graphql": "^14.0.2",
    "node-json-db": "^0.9.0",
    "nodemon": "^1.18.7",
    "pdu": "^1.1.0",
    "serialport": "^7.0.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.1.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-transform-async-to-generator": "^7.1.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@types/debug": "0.0.31",
    "@types/express": "^4.16.0",
    "@types/google-libphonenumber": "^7.4.17",
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.9",
    "@types/node-json-db": "0.0.1",
    "@types/serialport": "^7.0.0",
    "@types/supertest": "^2.0.6",
    "graphql-code-generator": "^0.13.0",
    "graphql-codegen-typescript-template": "^0.13.0",
    "graphql-tools": "^3.1.1",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.0.3"
  }
}
