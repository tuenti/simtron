{
    "name": "simtron",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "compile-service": "rm -rf dist-service && babel --extensions '.ts,.js' src --out-dir dist-service",
        "compile-api": "rm -rf dist-api && babel --extensions '.ts,.js' src --out-dir dist-api",
        "start-service": "npm run compile-service && pm2 start ./dist-service/index-service.js --name simtron-service",
        "start-api": "npm run compile-api && pm2 start ./dist-api/index-api.js --name simtron-api",
        "start": "npm run start-service && npm run start-api",
        "dev-service": "DEVELOPMENT=1 DEBUG=app nodemon --watch src --exec babel-node --extensions '.ts,.js' src/index-service.ts --",
        "dev-api": "DEVELOPMENT=1 DEBUG=app nodemon --watch src --exec babel-node --extensions '.ts,.js' src/index-api.ts --",
        "generate-types": "gql-gen",
        "test": "jest"
    },
    "dependencies": {
        "@slack/rtm-api": "^5.0.1",
        "@slack/web-api": "^5.0.1",
        "apollo-server-express": "^2.5.0",
        "debug": "^4.1.1",
        "express": "^4.17.1",
        "google-libphonenumber": "^3.2.2",
        "graphql": "^14.3.1",
        "node-json-db": "^0.11.0",
        "pdu": "*",
        "serialport": "^7.1.5",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/node": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-transform-async-to-generator": "^7.4.4",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-typescript": "^7.3.3",
        "@types/debug": "^4.1.4",
        "@types/express": "^4.16.1",
        "@types/google-libphonenumber": "*",
        "@types/graphql": "^14.2.0",
        "@types/jest": "^24.0.13",
        "@types/node-json-db": "*",
        "@types/serialport": "^7.0.3",
        "@types/supertest": "*",
        "graphql-code-generator": "^0.18.2",
        "graphql-codegen-typescript-template": "^0.18.2",
        "graphql-tools": "^4.0.4",
        "jest": "^24.8.0",
        "nodemon": "^1.19.1",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.2.0",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-eslint-rules": "*",
        "typescript": "^3.4.5"
    }
}
