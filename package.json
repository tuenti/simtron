{
  "name": "simtron",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "compile": "rm -rf dist && babel --extensions '.ts,.js' src --out-dir dist",
    "start": "npm run compile && pm2 start ./dist/index.js --name simtron",
    "dev": "DEVELOPMENT=1 DEBUG=app nodemon --watch src --exec babel-node --extensions '.ts,.js' src/index.ts --",
    "generate-types": "gql-gen",
    "test": "jest"
  },
  "dependencies": {
    "@slack/rtm-api": "^5.0.1",
    "@slack/web-api": "^5.0.1",
    "apollo-server-express": "^2.5.0",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "google-libphonenumber": "^3.2.2",
    "graphql": "^14.3.1",
    "node-json-db": "^0.11.0",
    "pdu": "*",
    "serialport": "^7.1.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-async-to-generator": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/debug": "^4.1.4",
    "@types/express": "^4.16.1",
    "@types/google-libphonenumber": "*",
    "@types/graphql": "^14.2.0",
